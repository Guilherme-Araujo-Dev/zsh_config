# Transforma a string em um texto de Component
angular_string() {
  local string="$1"

  string=${string##*/}

  # Substitue '-' por ' ' para criar palavras separadas
  string=${string//-/ }

  # Converte a primeira letra de cada palavra para maiúscula
  string=$(echo $string | awk '{for(i=1;i<=NF;i++){$i=toupper(substr($i,1,1)) substr($i,2)}; print}')

  # Remove espaços
  string=${string// /}

  # Adiciona 'Component' ao final
  string+="Component"

  echo $string
}

# Gera um componente no formato Fuse
ngc() {
  local param="$1"
  local nome=${param##*/}
  local angString=$(angular_string "$nome")

  # Cria a tela sem .SPEC e .SCSS
  ng generate component "$1" --skip-tests --style=none

  touch "src/app/$param/$nome.routes.ts"
  
  # Gera a tela de .routes
  echo "import { Routes } from '@angular/router';
  import { $angString } from './$nome.component';
  
  export default [
    {
        path     : '',
        component: $angString,
    },
  ] as Routes;" > "src/app/$param/$nome.routes.ts"
  
}  
alias ngc=ngc

